{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "wwwroot/dist/",
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}